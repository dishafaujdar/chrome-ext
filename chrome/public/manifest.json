{
  "manifest_version": 3,
  "name": "YouTube Video Filter",
  "version": "1.0",
  "description": "Filters YouTube videos based on category, duration, and date.",
  "icons": {"32": "icon.png"},

  "background": {"service_worker": "background.js"},

  "permissions": ["sidePanel","tabs","storage","activeTab"],

  "action": {"default_title": "Be choosy about your feed",
             "default_html": "index.html"},

  "side_panel": {"default_path": "index.html"},

  "content_scripts": [
    {
      "js": ["scripts/contentScript.js"],
      "css": ["index.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "host_permissions": ["https://www.youtube.com/*"]
}
